<% provide(:title, 'Edit entry') %>
<!-- Render the season navigation bar -->
<%= render 'shared/mgmt_weeks_nav', season: current_season(1), week_number: 0 %>

<h1>Edit Entry</h1>
<div class="row">
  <!-- Render the main navigation bar -->
  <%= render 'shared/sidebar_nav', pool: @pool %>
  <div class="col-sm-8">
    <div class="panel panel-primary">
      <div class="panel-header"><%= "Edit Entry - #{@entry.name}" %></div>
      <div class="panel-body">
        <%= simple_form_for @entry, html: { class: 'form-horizontal pull-left' },
              wrapper: :horizontal_form,
              wrapper_mappings: {
              check_boxes: :horizontal_collection,
              radio_buttons: :horizontal_collection,
              file: :horizontal_file,
              boolean: :horizontal_boolean
        } do |f| %>
          <%= render 'fields', f: f %>
          <%= f.button :submit, 'Save changes', class: "btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
