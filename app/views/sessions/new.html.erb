<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-sm-8 offset-2">
    <div class="card">
      <div class="card-header"></div>
        <div class="card-body">
          <%= form_tag(sessions_path, class: 'form-inline') do %>

            <div class="form-group">
              <%= text_field_tag :email, params[:email], id: 'signin_email',
                  class: 'form-control', placeholder: "Email Address" %>
            </div>

            <div class="form-group">
              <%= password_field_tag :password, nil, id: 'signin_password',
                  class: 'form-control', placeholder: "Password" %>
            </div>
            <p><%= link_to "Don't remember password?", 
                                  new_password_reset_path %> </p>

            <div class="checkbox">
              <label>
                <%= check_box_tag :remember_me, 1, params[:remember_me], 
                  class: 'form-control' %> Remember me
              </label>
            </div>
            <br /> <br />
            <%= submit_tag "Sign in", class: "btn btn-large btn-primary", id: 'signin_button' %>
          <% end %>

          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
